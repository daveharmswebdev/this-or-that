{
  "name": "versus",
  "version": "0.1.0",
  "private": true,
  "description": "Movie ranking game using Swiss tournament format",
  "workspaces": ["apps/*"],
  "scripts": {
    "prepare": "husky",
    "dev": "bun run --cwd apps/api dev & bun run --cwd apps/web dev",
    "build": "bun run --cwd apps/api build && bun run --cwd apps/web build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit -p apps/api && tsc --noEmit -p apps/web",
    "test": "vitest",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.7.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
